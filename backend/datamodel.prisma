type User {
    id: ID! @unique
    firstname: String!
    lastname: String!
    username: String! @unique
    email: String! @unique
    password: String!
    # conversations: [Conversation!]!
    # conversation: Conversation
}

type Message {
    id: ID! @unique
    text: String!
    # user: User!
}

type Conversation {
    id: ID! @unique
    users: [User!]!
}
