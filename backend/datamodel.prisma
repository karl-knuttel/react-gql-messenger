type User {
    id: ID! @unique
    firstname: String!
    lastname: String!
    username: String! @unique
    email: String! @unique
    password: String!
    conversations: [Conversation!]!
    # conversation: Conversation
    messages: [Message!]!
}

type Message {
    id: ID! @unique
    text: String!
    user: User!
    conversation: ID!
}

type Conversation {
    id: ID! @unique
    users: [User!]!
    messages: [Message!]!
}
