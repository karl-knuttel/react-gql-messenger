type User {
    id: ID! @unique
    firstname: String!
    lastname: String!
    username: String! @unique
    email: String! @unique
    password: String!
    conversations: [Conversation!]!
    messages: [Message!]!
    lastActivity: DateTime!
}

type Message {
    id: ID! @unique
    text: String!
    user: User!
    conversation: Conversation!
}

type Conversation {
    id: ID! @unique
    users: [User!]!
    messages: [Message]!
}
